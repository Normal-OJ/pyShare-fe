v-container( :style="{ width: $vuetify.breakpoint.mdAndUp ? '70vw' : '95vw', height: '100%' }" )
  v-card.my-3( height="100%" elevation="12" )
    v-card-title 課程學生列表
    v-select.ma-3( label="選擇課程" outlined hide-details :items="['課程一', '課程二']" value="課程一" )
    v-container( fluid )
      v-row( no-gutters )
        v-btn( color="primary" @click="newCourseDialog = true" )
          v-icon mdi-plus
          | 新增課程
        v-spacer
        v-btn( color="info" @click="newStudentDialog = true; dialog = 1" ) 
          v-icon mdi-plus
          | 快速加入
        v-btn.ml-3( color="danger" @click="newStudentDialog = true; dialog = 2" dark )
          v-icon mdi-trash-can
          | 快速刪除
    v-divider.mt-0
    v-simple-table.px-4
      thead
        tr
          th.font-weight-bold.subtitle-1.text--primary 使用者名稱
          th.font-weight-bold.subtitle-1.text--primary.hidden-sm-and-down 暱稱
          th.font-weight-bold.subtitle-1.text--primary.hidden-sm-and-down 角色
          th.font-weight-bold.subtitle-1.text--primary.hidden-sm-and-down 獲得愛心數
          th.font-weight-bold.subtitle-1.text--primary 管理
      tbody
        tr( v-for="(item, idx) in items" :key="item.username" )
          td.subtitle-1
            a( :href="`/proflie/${item.username}`" ) {{ item.username }}
          td.subtitle-1.hidden-sm-and-down {{ item.displayName }}
          td.subtitle-1.hidden-sm-and-down
            v-menu( offset-y )
              template( v-slot:activator="{ on }" ) 
                v-btn( outlined v-on="on" small )
                  | {{ item.role }}
                  v-icon mdi-chevron-down
              v-list
                v-list-item( v-for="role in roles" :key="role" @click="items[idx].role = role" )
                  v-list-item-title {{ role }}
          td.subtitle-1.hidden-sm-and-down {{ item.star }}
          td.subtitle-1
            v-tooltip( right color="#000000E6" )
              template( v-slot:activator="{ on }" )
                v-btn( color="error" v-on="on" )
                  v-icon mdi-trash-can
              span 將學生從課程移出
        tr( v-if="items.length===0" )
          td( colspan="3" ) No data available.
  v-dialog( v-model="newCourseDialog" :width="$vuetify.breakpoint.mdAndUp ? '70vw' : '95vw'" )
    v-card
      v-card-title.headline 新增課程
      v-card-text
        v-text-field( label="輸入課程名稱" )
      v-card-actions
        v-spacer
        v-btn.mr-3( color="danger" @click="newCourseDialog = false" dark ) 取消
        v-btn( color="primary" @click="newCourseDialog = false" ) 確認
  v-dialog( v-model="newStudentDialog" :width="$vuetify.breakpoint.mdAndUp ? '70vw' : '95vw'" )
    v-card
      v-card-title.headline {{ '快速' + (dialog==1 ? '新增' : '刪除') + '學生' }}
      v-card-text
        p.text--primary 多個使用者名稱請以逗號分隔
        v-textarea( label="輸入學生使用者名稱" outlined )
      v-card-actions
        v-spacer
        v-btn.mr-3( color="danger" @click="newStudentDialog = false" dark ) 取消
        v-btn( color="primary" @click="newStudentDialog = false" ) 確認
